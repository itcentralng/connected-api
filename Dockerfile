FROM python:3.11

COPY requirements.txt .

RUN pip install -r requirements.txt

COPY . .

ARG AFRICASTALKING_API_KEY

ARG AFRICASTALKING_USERNAME

ARG COHERE_API_KEY

ARG DB_PASSWORD

ARG DB_USERNAME

ARG DB_HOST

ARG DB_PORT

ARG WEAVIATE_API_KEY

ARG WEAVIATE_URL

ENV AFRICASTALKING_API_KEY=$AFRICASTALKING_API_KEY

ENV AFRICASTALKING_USERNAME=$AFRICASTALKING_USERNAME

ENV COHERE_API_KEY=$COHERE_API_KEY

ENV DB_PASSWORD=$DB_PASSWORD

ENV DB_USERNAME=$DB_USERNAME

ENV DB_HOST=$DB_HOST

ENV DB_PORT=$DB_PORT

ENV WEAVIATE_API_KEY=$WEAVIATE_API_KEY

ENV WEAVIATE_URL=$WEAVIATE_URL

EXPOSE 80
